#!/usr/bin/env bash
set -euo pipefail

TS="$(date +%Y%m%d_%H%M%S)"
LOG_DIR="/var/log/sg-runbook"
LOG="${LOG_DIR}/remove_apptainer_${TS}.log"
BK_DIR="/var/backups/sg-runbook/apptainer_${TS}"
mkdir -p "$LOG_DIR" "/var/backups/sg-runbook"
exec > >(tee -a "$LOG") 2>&1

die(){ echo "[ERROR] $*" >&2; exit 1; }
log(){ echo "[INFO] $*"; }
warn(){ echo "[WARN] $*"; }

PURGE=0
PURGE_DATA=0
KEEP_REPO=0

usage(){
  cat <<'USAGE'
Usage: sg-remove-apptainer [--purge] [--purge-data] [--keep-repo]
  --purge       apt purge (remove config files too)
  --purge-data  remove /etc/apptainer and /var/lib/apptainer (backs up first)
  --keep-repo   keep PPA list/keyring
USAGE
}

while [[ $# -gt 0 ]]; do
  case "$1" in
    --purge) PURGE=1 ;;
    --purge-data) PURGE_DATA=1 ;;
    --keep-repo) KEEP_REPO=1 ;;
    -h|--help) usage; exit 0 ;;
    *) die "unknown arg: $1" ;;
  esac
  shift
done

[[ $EUID -eq 0 ]] || die "run as root"

log "==== sg-remove-apptainer start ===="
log "log: $LOG"

export DEBIAN_FRONTEND=noninteractive

if dpkg -s apptainer >/dev/null 2>&1; then
  if [[ $PURGE -eq 1 ]]; then
    log "apt purge apptainer..."
    apt-get purge -y apptainer
  else
    log "apt remove apptainer..."
    apt-get remove -y apptainer
  fi
else
  warn "apptainer not installed (skip)"
fi

log "apt autoremove..."
apt-get autoremove -y --purge || true

if [[ $KEEP_REPO -eq 0 ]]; then
  log "remove repo files"
  rm -f /etc/apt/sources.list.d/apptainer-ppa.list || true
  rm -f /etc/apt/keyrings/apptainer-ppa.gpg || true
fi

if [[ $PURGE_DATA -eq 1 ]]; then
  mkdir -p "$BK_DIR"
  for p in /etc/apptainer /var/lib/apptainer; do
    if [[ -e "$p" ]]; then
      log "backup $p -> $BK_DIR"
      cp -a "$p" "$BK_DIR/" || true
      log "remove $p"
      rm -rf "$p"
    fi
  done
fi

log "==== sg-remove-apptainer done ===="
log "log: $LOG"
