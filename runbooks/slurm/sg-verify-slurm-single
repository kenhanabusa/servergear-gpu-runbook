#!/usr/bin/env bash
set -euo pipefail
. /usr/local/lib/sg-runbook/lib/common.sh
require_root

systemctl status --no-pager munge slurmctld slurmd || true
echo
scontrol ping
echo
sinfo -N -l || sinfo || true
echo
# basic single-node run (may fail depending on config/permissions)
srun -N1 -n1 /bin/hostname || true
